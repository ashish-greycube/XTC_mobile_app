<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/imgError"
            android:layout_width="@dimen/onezerozero"
            android:layout_height="@dimen/onezerozero"
            android:backgroundTint="@color/colorGreyLite"
            android:background="@drawable/icon_menu_categories"/>

        <TextView
            android:id="@+id/textErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyLite"
            android:layout_margin="@dimen/onezero"
            android:textSize="@dimen/onesix"
            style="@style/font_italic"
            android:gravity="center"
            android:text="@string/app_name"/>


    </LinearLayout>



</RelativeLayout>