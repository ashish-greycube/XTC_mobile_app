<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorBlueLite">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <stroke android:width="@dimen/one" android:color="@color/colorGreenLite" />
            <solid android:color="@color/white"></solid>
            <corners android:radius="@dimen/twozero"></corners>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <stroke android:width="@dimen/one" android:color="@color/colorGreenLite" />
            <solid android:color="@color/white"></solid>
            <corners android:radius="@dimen/twozero"></corners>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <stroke android:width="@dimen/one" android:color="@color/colorGreen" />
            <solid android:color="@color/white"></solid>
            <corners android:radius="@dimen/twozero"></corners>
        </shape>
    </item>
</ripple>