        <shape android:shape="rectangle" >
            <solid android:color="@color/coloSkyBlueLite"></solid>
            <corners android:radius="@dimen/onezero"></corners>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/coloSkyBlueLite"></solid>
            <corners android:radius="@dimen/onezero"></corners>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/coloSkyBlue"></solid>
            <corners android:radius="@dimen/onezero"></corners>
        </shape>
    </item>
</ripple>